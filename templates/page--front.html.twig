{#
/**
 * @file
 * Default theme implementation to display a single page.
 *
 * The doctype, html, head and body tags are not in this template. Instead they
 * can be found in the html.html.twig template in this directory.
 *
 * Available variables:
 *
 * General utility variables:
 * - base_path: The base URL path of the Drupal installation. Will usually be
 *   "/" unless you have installed Drupal in a sub-directory.
 * - is_front: A flag indicating if the current page is the front page.
 * - logged_in: A flag indicating if the user is registered and signed in.
 * - is_admin: A flag indicating if the user has permission to access
 *   administration pages.
 *
 * Site identity:
 * - front_page: The URL of the front page. Use this instead of base_path when
 *   linking to the front page. This includes the language domain or prefix.
 *
 * Page content (in order of occurrence in the default page.html.twig):
 * - messages: Status and error messages. Should be displayed prominently.
 * - node: Fully loaded node, if there is an automatically-loaded node
 *   associated with the page and the node ID is the second argument in the
 *   page's path (e.g. node/12345 and node/12345/revisions, but not
 *   comment/reply/12345).
 *
 * Regions:
 * - page.header: Items for the header region.
 * - page.primary_menu: Items for the primary menu region.
 * - page.secondary_menu: Items for the secondary menu region.
 * - page.highlighted: Items for the highlighted content region.
 * - page.help: Dynamic help text, mostly for admin pages.
 * - page.content: The main content of the current page.
 * - page.sidebar_first: Items for the first sidebar.
 * - page.sidebar_second: Items for the second sidebar.
 * - page.footer: Items for the footer region.
 * - page.breadcrumb: Items for the breadcrumb region.
 *
 * @see template_preprocess_page()
 * @see html.html.twig
 *
 * @ingroup themeable
 */
#}
<div class="layout-container">
  {% if header_bg_color %}
    <header role="banner" id="js-header" style = "background-color:rgba( {{header_bg_color}} )">
        {{ page.header }}
    </header>
  {%else %}
    <header role="banner" id="js-header">
      {{ page.header }}
      {# page.primary_menu #}
    </header>
  {%endif %}
  
  <!-- Region Fixed -->
  
  {% if background_type == 1 %}
    <div class ="fixed" style = "background-image:url('{{ fixed_image }}');
            background-position:center;
            background-repeat:{{ background_repeat[1] }};
            background-size:cover;
            background-attachment:{{ background_attachment[1] }};
            min-height:{{ region_height[1] }}px;">       
      {{ page.fixed }}
  {% elseif background_type == 2 %}
      <div class ="fixed">
        <div class="video">
            <video width="100%" height = "100%" autoplay loop>
              <source src="{{ fixed_video }}" type="video/mp4">				 
              Your browser does not support the video tag.
            </video>
	</div>
  {% elseif background_type == 3 %}
      <div class ="fixed">
        <div id="owl-demo" class="owl-carousel owl-theme">
          <div  class = "carousel_background" id="image_1" style = "background:url('{{ slide_1_image }}')
                no-repeat top center; background-size:cover">
            <h2>{{ slide_1_title }}</h2>
            <p>{{ slide_1_text }}</p>
            <!--<img src="{{ slide_1_image }}"/>-->
          </div>
          <div  class = "carousel_background" id="image_2" style = "background:url('{{ slide_2_image }}')
                no-repeat top center; background-size:cover">
            <h2>{{ slide_2_title }}</h2>
            <p>{{ slide_2_text }}</p>
             <!--<img src="{{ slide_2_image }}"/>-->
          </div>
          <div  class = "carousel_background" id="image_3" style = "background:url('{{ slide_3_image }}')
                no-repeat top center; background-size:cover">
            <h2>{{ slide_3_title }}</h2>
            <p>{{ slide_3_text }}</p>
             <!--<img src="{{ slide_3_image }}"/>-->
          </div>
          <div  class = "carousel_background" id="image_4" style = "background:url('{{ slide_4_image }}')
                no-repeat top center; background-size:cover">
            <h2>{{ slide_4_title }}</h2>
            <p>{{ slide_4_text }}</p>
             <!--<img src="{{ slide_3_image }}"/>-->
          </div>
          <div  class = "carousel_background" id="image_5" style = "background:url('{{ slide_5_image }}')
                no-repeat top center; background-size:cover">
            <h2>{{ slide_5_title }}</h2>
            <p>{{ slide_5_text }}</p>
             <!--<img src="{{ slide_3_image }}"/>-->
          </div>
        </div>
  
  {% endif %}
  </div><!-- /fixed -->
  
  
  
  <div class ='scroll'>
      {% if scroll_1_image %}
        <div class ='scroll_1' style = "background-image:url('{{ scroll_1_image }}');
            background-position:top left;
            background-repeat:{{ background_repeat[1] }};
            background-size:cover;
            background-attachment:{{ background_attachment[1] }};
            min-height:{{ region_height[1] }}px;">
      {% else %}
          <div class ='scroll_1' style = "min-height:{{ region_height[1] }}px;">
      {% endif %}
        {{ page.scroll_1 }}
        Region Scroll 1
      </div><!-- /scroll_1 -->
      
      {% if scroll_2_image %}
          <div class ='scroll_2' style = "background-image:url('{{ scroll_2_image }}');
            background-position:bottom left;
            background-repeat:{{ background_repeat[2] }};
            background-size:400px;
            background-attachment:{{ background_attachment[2] }};
            min-height:{{ region_height[2] }}px;">
      {% else %}
          <div class ='scroll_2' style = "min-height:{{ region_height[2] }}px;">
      {% endif %}
      
        {{ page.scroll_2 }}
        Region Scroll 2
      </div><!-- /scroll_2 -->
      
      {% if scroll_3_image %}
          <div class ='scroll_3' style = "background-image:url('{{ scroll_3_image }}');
            background-position:top left;
            background-repeat:{{ background_repeat[3] }};
            background-size:cover;
            background-attachment:{{ background_attachment[3] }};
            min-height:{{ region_height[3] }}px;">
      {% else %}
          <div class ='scroll_3' style = "min-height:{{ region_height[3] }}px;">
      {% endif %}        
        {{ page.scroll_3 }}
        Region Scroll 3
      </div><!-- /scroll_3 -->
      
      {% if scroll_4_image %}
          <div class ='scroll_4' style = "background-image:url('{{ scroll_4_image }}');
            background-position:top left;
            background-repeat:{{ background_repeat[4] }};
            background-size:cover;
            background-attachment:{{ background_attachment[4] }};
            min-height:{{ region_height[4] }}px;">
      {% else %}
          <div class ='scroll_4' style = "min-height:{{ region_height[4] }}px;">
      {% endif %}  
        {{ page.scroll_4 }}
        Region Scroll 4
      </div><!-- /scroll_4 -->
      
      {% if scroll_5_image %}
          <div class ='scroll_5' style = "background-image:url('{{ scroll_5_image }}');
            background-position:top left;
            background-repeat:{{ background_repeat[5] }};
            background-size:cover;
            background-attachment:{{ background_attachment[5] }};
            min-height:{{ region_height[5] }}px;">
      {% else %}
          <div class ='scroll_5' style = "min-height:{{ region_height[5] }}px;">
      {% endif %}  
        {{ page.scroll_5 }}
        Region Scroll 5
      </div><!-- /scroll_5 -->
      
      {% if page.sidebar_first %}
        <aside class="layout-sidebar-first" role="complementary">
          {{ page.sidebar_first }}
        </aside>
      {% endif %}

      {% if page.sidebar_second %}
        <aside class="layout-sidebar-second" role="complementary">
          {{ page.sidebar_second }}
        </aside>
      {% endif %}
     
      {% if page.footer %}
        <footer role="contentinfo">
          {{ page.footer }}
          Footer
        </footer>
      {% endif %}
  </div><!-- /scroll -->
</div>{# /.layout-container #}
